<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/song_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_audiotrack_accent"
        android:drawablePadding="@dimen/item_padding"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/item_padding_large"
        android:paddingTop="@dimen/item_padding"
        android:paddingEnd="@dimen/item_padding_large"
        android:paddingBottom="@dimen/item_padding" />
</LinearLayout>